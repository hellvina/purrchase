// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  createdAt DateTime @default(now()) @db.Timestamp(6)
  username String @unique @db.VarChar(255)
  email String @unique
  password String
  lives Live[]
}

enum LIVE_STATUS {
  NOT_STARTED_YET
  ALREADY_STARTED
}

model Live {
  id String @id @default(uuid())
  createdAt DateTime @default(now()) @db.Timestamp(6)
  title String @db.VarChar(255)
  description String?
  image String
  startDate DateTime
  finishDate DateTime
  status LIVE_STATUS @default(NOT_STARTED_YET)
  products Product[]
  belongsTo User @relation(fields: [belongsToId], references: [id], onDelete: NoAction, onUpdate: NoAction )
  belongsToId String
}

model Product {
  id String @id @default(uuid())
  createdAt DateTime @default(now()) @db.Timestamp(6)
  name String
  image String
  quantity String
  fromLive Live @relation(fields: [liveId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  liveId String 
}
